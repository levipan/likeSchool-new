/* custom-tab-bar/index.wxss */
.tab-bar {
  width: 100%;
  height: 96rpx;
  background-color: white;
  position: fixed;
  bottom: 0;
  left: 0;
}

.tab-border {
  width: 100%;
  height: 1px;
  background-color: rgba(0, 0 , 0, 0.33);
  position: absolute;
  transform: scaleY(0.5);
  top: 0;
  left: 0;
}
.content-list {
  width: 100%;
  height: 100%;
  display: flex;
}
.content-item {
  flex: 1;
  /* background-color: green; */
  /* border: 1px solid red; */
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.content-item .icon {
  width: 27px;
  height: 27px;
  margin-bottom: 5px;
}
.content-item .desc {
  font-size: 10px;
}