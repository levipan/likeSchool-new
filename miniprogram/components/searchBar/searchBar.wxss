/* components/searchBar/searchBar.wxss */
@import "/style/icon-font.wxss";
.searchBar {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  border-bottom: 1px solid #d4237a;
  display: flex;
  padding: 10rpx;
  box-sizing: border-box;
}

.searchBar .publish {
  width: 80rpx;
  height: 100%;
  background-color: #fff;
  font-size: 60rpx;
  color: #d4237a;
  text-align: center;
  line-height: 60rpx;
}

.searchBar .searchContainer {
  flex: 1;
  background-color: #fff;
  display: flex;
  position: relative;
}

.searchBar .searchContainer .searchKey {
  flex: 1;
  height: 100%;
  border-radius: 30rpx;
  border: 1px solid #d4237a;
  box-sizing: border-box;
  margin-right: 10rpx;
  font-size: 26rpx;
  padding-left: 60rpx;
}

.searchBar .searchContainer .searchIcon {
  width: 60rpx;
  height: 60rpx;
  /* background-color: red; */
  text-align: center;
  line-height: 60rpx;
  position: absolute;
  left: 6rpx;
  top: 50%;
  transform: translateY(-50%);
}

.searchBar .searchContainer .serachBtn {
  width: 150rpx;
  height: 100%;
  line-height: 60rpx;
  background-color: #d4237a;
  color: #fff;
  font-size: 26rpx;
}