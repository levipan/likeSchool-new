/* components/stageCard/stageCard.wxss */
.stageCard {
  width: 100%;
  height: 200rpx;
  background-color: green;
  position: relative;
  display: flex;
  margin-bottom: 10rpx;
}

.stageCard .num {
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  background-color: white;
  border-radius: 20rpx;
  position: absolute;
  left: -15rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 999;
}
.stageCard .fm {
  width: 200rpx;
  height: 200rpx;
  background-color: tomato;
  position: relative;
}
.stageCard .fm .fm_img {
  width: 100%;
  height: 100%;
}
.stageCard .fm .mask {
  width: 100%;
  height: 100%;
  color: white;
  font-weight: bold;
  background-color: rgba(0, 0, 0, 0.3);
  font-size: 60rpx;
  text-align: center;
  line-height: 200rpx;
  position: absolute;
  left: 0;
  top: 0;
}


.stageCard .detail {
  flex: 1;
  background-color: yellow;
  /* position: relative; */
}

.stageCard .detail .intro {
  width: 100%;
  height: 100%;
  background-color: white;
  /* display: flex; */
  flex-direction: column;
  padding: 10rpx;
  box-sizing: border-box;
}
.stageCard .detail .intro .title {
  font-size: 28rpx;
  margin-bottom: 10rpx;

}
.stageCard .detail .intro .item {
  font-size: 26rpx;
}

.stageCard .detail .classList {
  width: 100%;
  height: 100%;
  background-color: white;
}


.course-list-swiper {
  height: 100%;
}
.course-item {
  background: #fff;
  height: 100%;
  position: relative;
  margin-right: 10rpx;
}
.course-item .course-img {
  width: 100%;
  height: 100%;
}
.course-item .desc {
  font-size: 26rpx;
  width: 100%;
  line-height: 40rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.3);
  position: absolute;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
}