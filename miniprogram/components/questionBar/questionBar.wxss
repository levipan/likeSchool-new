@import "/style/icon-font.wxss";

.questionBar {
  width: 100%;
  height: 80rpx;
  display: flex;
  /* border: 0.5px solid gainsboro; */
  box-sizing: border-box;
  background-color: #fff;
}

.questionBar .share-btn {
  width: 375rpx;
  background-color: #fff;
  border: none;
  /* border-top: 0.5px solid gainsboro; */
  font-size: 34rpx;
}
.questionBar .share-btn::before {
  margin-right: 20rpx;
}
.questionBar .share-btn::after {
  border: none;
}
.questionBar view {
  flex: 1;
  font-size: 34rpx;
  line-height: 80rpx;
  text-align: center;
}
.questionBar view::before {
  margin-right: 20rpx;
}
.answerContent {
  width: 100%;
}